package codes;
import java.util.*;


import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.util.Scanner;

public class Count_Words
{

    public static void main(String[] args) throws IOException
    {       
    
    	
    	 Scanner sc = new Scanner(System.in);
         System.out.print("name of the text file : ");
         String fileName = sc.nextLine();
         FileInputStream f = new FileInputStream(fileName);
       Scanner input = new Scanner(new File(fileName));
       int CharCount=f.available();
        char ch;
        int LineCount=0;
       
        for(int i=0;i<CharCount;i++)
        {
                    ch=(char)f.read();
                    if(ch=='\n')
                    LineCount++;
                                                       
        }
        System.out.println("\nNumber of lines : "+LineCount);
        System.out.println("\nNumber of characters : "+CharCount);
        Map<String, Integer> wordCounts = new TreeMap<String, Integer>();
        while (input.hasNext()) {
        	String next = input.next().toLowerCase().replaceAll("[^a-zA-Z0-9]", "");
            if (!wordCounts.containsKey(next)) {
                wordCounts.put(next, 1);
            } else {
                wordCounts.put(next, wordCounts.get(next) + 1);
            }
        }
       
        int min = 0;
        for (String word : wordCounts.keySet()) {
            int count = wordCounts.get(word);
            if (count >= min) {
                System.out.println(word + "\t" + count);
            }
        }
       f.close();
     sc.close();
     input.close();
        }
    }

    
